<p id="notice"><%= notice %></p>

<h1>Ideas</h1>
<% image_tag "https://superclub.videotron.com/media/catalog/product/cache/image/500x711/e9c3970ab036de70892d86c6d221abfe/2/0/2017-08-20_14-26-19.png" %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ideas.each do |idea| %>
      <tr>
        <td class="green"><%= idea.name %></td>
        <td><%= idea.description %></td>
        <%= image_tag idea.picture_url, width: '20%' if idea.picture.present? %>
        <td><%= link_to 'Show', idea %></td>
        <td><%= link_to 'Edit', edit_idea_path(idea) %></td>
        <td><%= link_to 'Destroy', idea, method: :delete, class: 'btn btn-danger btn-sm' , data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Idea', new_idea_path %>
